<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="maxlzp\doctrine\models\household\Household" table="households">
        <id name="id" type="uuidtype">
        </id>

        <field name="title" type="string" />

        <one-to-many field="meters" target-entity="maxlzp\doctrine\models\household\Meter" mapped-by="household">
                <cascade>
                    <cascade-all/>
                </cascade>
        </one-to-many>

        <indexes>
            <index name="title_idx" columns="title" />
        </indexes>

    </entity>
</doctrine-mapping>