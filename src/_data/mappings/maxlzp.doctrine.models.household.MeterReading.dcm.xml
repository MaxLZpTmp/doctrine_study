<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="maxlzp\doctrine\models\household\MeterReading" table="meter_readings">
        <id name="id" type="string">
        </id>

        <field name="date" type="datetime_immutable" />
        <field name="value" type="float" />
        
        <many-to-one field="meter" target-entity="maxlzp\doctrine\models\household\Meter" >
            <join-column name="meter_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>